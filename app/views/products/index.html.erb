<div class="subtitle">Products</div>

<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search" %>
<% end %>

<div id="products">
	<%= render @products %>

</div>

<%= link_to "NEW PRODUCT","/products/new", class: "button" %>

